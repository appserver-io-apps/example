    <datasource name="appserver.io-example-application">
        <database>
            <driver>pdo_sqlite</driver>
            <user>appserver</user>
            <password>appserver</password>
            <path>${base.dir}/${host.tmpBase.dir}/${webapp.name}/data/appserver_ApplicationServer.sqlite</path>
            <memory>false</memory>
        </database>
    </datasource>

</datasources>